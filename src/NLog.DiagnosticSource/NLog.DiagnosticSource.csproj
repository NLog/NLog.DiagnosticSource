<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;netstandard2.0;netstandard1.3</TargetFrameworks>
    <RootNamespace>NLog</RootNamespace>
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>rc.1</VersionSuffix>

    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <!-- AssemblyVersion must be fixed on 1.0.0.0 -->
    <AppVeyorBuildNumber>$(APPVEYOR_BUILD_NUMBER)</AppVeyorBuildNumber>
    <AppVeyorBuildNumber Condition="'$(AppVeyorBuildNumber)' == ''">0</AppVeyorBuildNumber>
    <FileVersion>$(VersionPrefix).$(AppVeyorBuildNumber)</FileVersion>

    <Title>NLog.DiagnosticSource</Title>
    <Company>NLog</Company>
    <Description>NLog Integration for Microsoft System.Diagnostics.DiagnosticSource and Activity </Description>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/NLog/NLog.DiagnosticSource.git</RepositoryUrl>
    <PackageTags>DiagnosticSource;NLog;logging;log</PackageTags>
    <PackageIconUrl>https://nlog-project.org/N.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/NLog/NLog.DiagnosticSourcer</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/NLog/NLog.DiagnosticSource/blob/master/LICENSE</PackageLicenseUrl>
    <PackageReleaseNotes>
    </PackageReleaseNotes>

    <IsPackable>true</IsPackable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>NLog.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NLog" Version="4.7.4" />
    <PackageReference Include="System.Diagnostics.DiagnosticSource" Version="4.6.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
